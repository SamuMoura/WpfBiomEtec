<Window x:Class="WpfBiomEtec.WinMN"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfBiomEtec"
        mc:Ignorable="d"
        Title="Presenças" Height="600" Width="900">


    <Grid Background="LightGray" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>


        <!-- Title -->
        <TextBlock Text="Presença - MN"
            FontSize="50" HorizontalAlignment="Center"
            Margin="0,20,0,20" 
            Grid.Row="0"
        />

        <!-- Content -->
        <Grid Grid.Row="1" Margin="-88,0,130,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!--Grafic-->
            <Grid Margin="-88,-69,300,-72" Grid.ColumnSpan="2">
                <!-- Grafic Circle -->
                <Ellipse Fill="#ffff" Stroke="DarkBlue" StrokeThickness="60" HorizontalAlignment="Left" VerticalAlignment="Top" Width="300" Height="300" Margin="248,83,0,0"/>
                <TextBlock Text="Total" FontSize="24" HorizontalAlignment="Left" VerticalAlignment="Top" RenderTransformOrigin="2.532,-2" Margin="373,388,0,0"/>
            </Grid>

            <!-- Progress Bar -->
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="149" Width="240" Grid.Column="1" Margin="54,10,0,0">
                <ProgressBar Value="80" Maximum="100" Width="202" Height="20" Margin="0,18,0,20" Foreground="DarkBlue" RenderTransformOrigin="0.277,0.852"/>
                <ProgressBar Value="75" Maximum="100" Width="203" Height="20" Foreground="DarkBlue"/>
                <ProgressBar Value="75" Maximum="100" Width="200" Height="20" Margin="0,20" Foreground="DarkBlue"/>
            </StackPanel>

            <TextBlock
            FontSize="10" HorizontalAlignment="Left"
            Margin="160,50,0,388" 
            Grid.Row="0" Grid.Column="1" Width="28" Height="20" RenderTransformOrigin="-0.086,-0.128"
        Text="1°MN"
        />
            <TextBlock
                FontSize="10" HorizontalAlignment="Center"
                Margin="0,159,0,-117" 
                Grid.Row="0" Grid.Column="1"
        Text=""
        />
            <TextBlock
                FontSize="10" HorizontalAlignment="Left"
                Margin="160,90,0,348" 
                Grid.Row="0" Grid.Column="1" Width="28" Height="20" RenderTransformOrigin="-0.086,-0.128"
        Text="2°MN"
        />
            <TextBlock
                FontSize="10" HorizontalAlignment="Left"
                Margin="160,134,0,304" 
                Grid.Row="0" Grid.Column="1" Width="28" Height="20" RenderTransformOrigin="-0.086,-0.128"
        Text="3°MN"
        />
        </Grid>
        <Button x:Name="btnVoltar" Content="Voltar" Width="100" Height="30" HorizontalAlignment="Left" Grid.Row="1" Margin="750,382,0,45" Click="btnVoltar_Click"/>

        <!-- Back Button -->
    </Grid>
</Window>
